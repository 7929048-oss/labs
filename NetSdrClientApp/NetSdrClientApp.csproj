<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <!-- Enable nullable reference types to reduce NRE risks flagged by Sonar -->
    <Nullable>enable</Nullable>
    <!-- Prefer treating compiler warnings as build notifications (you can enable as-errors in CI selectively) -->
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Net.Sockets" Version="6.0.0" />
  </ItemGroup>

</Project>
